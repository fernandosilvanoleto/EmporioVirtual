@model EmporioVirtual.Models.Categoria
@{
    ViewData["Title"] = "Atualizar Categoria";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <input type="hidden" asp-for="Id"/>

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" placeholder="Digitar o nome da categoria">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Slog"></label>
        <input asp-for="Slog" class="form-control" placeholder="Digitar o slog da categoria">
        <span asp-validation-for="Slog" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoriaPaiId"></label>
        <select asp-for="CategoriaPaiId" class="form-control" asp-items="@ViewBag.Categorias">
            <option value="">Selecione</option>
        </select>
        <span asp-validation-for="CategoriaPaiId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-dark">Voltar</a>
</form>